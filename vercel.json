{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/public/assets/$1" // Adicione '/public/' aqui
    },
    {
      "src": "/bottomtop/(.*)",
      "dest": "/public/bottomtop/$1" // Nova regra para o JS
    },
    {
      "src": "/src/styles.css",
      "dest": "/src/styles.css" // Para seu CSS personalizado
    },
    {
      "src": "/dist/styles.css",
      "dest": "/dist/styles.css" // Para o CSS gerado
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": {
        "Cache-Control": "s-maxage=3600, stale-while-revalidate"
      }
    }
  ]
}
